<Window x:Class="MoneyRules.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MoneyRules.UI.Windows"
        Title="MoneyRules"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl x:Name="MainTabControl">

            <!-- 📁 Завантаження файлу -->
            <TabItem Header="Завантаження файлу">
                <local:FileUploadPage />
            </TabItem>

            <!-- 💸 Редагування даних -->
            <TabItem Header="Редагування даних">
                <StackPanel Margin="10">
                    <TextBlock Text="Тут будуть транзакції та кнопки для редагування" Margin="5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Додати транзакцію" Width="150" Margin="0,0,5,0" Click="AddTransactionButton_Click"/>
                        <Button Content="Переглянути історію" Width="200" Margin="0,0,5,0" Click="OpenHistory_Click"/>
                        <Button Content="Встановити ліміт" Width="150" Click="BtnSetMonthlyLimit_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- 💡 Поради -->
            <TabItem Header="Поради">
                <StackPanel Margin="10">
                    <TextBlock Text="Поради на основі ваших транзакцій" FontStyle="Italic"/>
                    <ItemsControl x:Name="AdviceList" Margin="0,10,0,0"/>
                    <Button Content="Оновити поради" Width="150" Click="RefreshAdviceButton_Click"/>
                </StackPanel>
            </TabItem>

            <!-- 👤 Профіль -->
            <TabItem Header="Профіль">
                <StackPanel Margin="20">
                    <Image x:Name="ProfileImage" Width="150" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                    <!-- ✅ Виправлено Click -->
                    <Button Content="Змінити фото" Width="150" Margin="0,0,0,10" Click="BtnChangePhoto_Click"/>
                    
                    <TextBlock Text="Ім'я:"/>
                    <TextBox x:Name="TxtName" Width="250" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Email:"/>
                    <TextBox x:Name="TxtEmail" Width="250" Margin="0,0,0,10"/>
                    
                    <Button Content="Зберегти зміни" Width="150" Margin="0,0,0,10" Click="BtnSaveProfile_Click"/>
                    <Button Content="Вийти з акаунту" Width="150" Background="#E57373" Foreground="White" Click="BtnLogout_Click"/>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>

<Window x:Class="MoneyRules.UI.Windows.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Додати транзакцію" Height="355" Width="400" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Сума:"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="0" Margin="100,0,0,5" Width="200"/>

        <TextBlock Text="Категорія:" Grid.Row="1"/>
        <TextBox x:Name="CategoryTextBox" Grid.Row="1" Margin="100,0,0,5" Width="200"/>

        <TextBlock Text="Тип:" Grid.Row="2"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="2" Margin="100,0,0,5" Width="200">
            <ComboBoxItem Content="Дохід"/>
            <ComboBoxItem Content="Витрата"/>
        </ComboBox>

        <TextBlock Text="Дата:" Grid.Row="3"/>
        <DatePicker x:Name="DatePicker" Grid.Row="3" Margin="100,0,0,5" Width="200" SelectedDate="{x:Static sys:DateTime.Now}"/>

        <TextBlock Text="Опис:" Grid.Row="4"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Margin="100,0,0,5" Width="200"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,157">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click" Height="20
                    "/>
            <Button Content="Відміна" Width="80" Margin="5" Click="CancelButton_Click" Height="20
                    "/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="MoneyRules.UI.Windows.EditTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування транзакції" Height="400" Width="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Сума:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtAmount" Grid.Row="0" Margin="100,0,0,0" Width="200"/>

        <TextBlock Text="Тип:" Grid.Row="1" VerticalAlignment="Center"/>
        <ComboBox x:Name="CmbType" Grid.Row="1" Margin="100,0,0,0" Width="200">
            <ComboBoxItem Content="Income"/>
            <ComboBoxItem Content="Expense"/>
        </ComboBox>

		<TextBlock Text="Категорія:" Grid.Row="2" VerticalAlignment="Center"/>
		<ComboBox x:Name="CmbCategory"
				  Grid.Row="2"
				  Margin="100,0,0,0"
				  Width="200"
				  DisplayMemberPath="Name"
				  SelectedValuePath="CategoryId"/>


		<TextBlock Text="Дата:" Grid.Row="3" VerticalAlignment="Center"/>
        <DatePicker x:Name="DpDate" Grid.Row="3" Margin="100,0,0,0" Width="200"/>

        <TextBlock Text="Опис:" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtDescription" Grid.Row="4" Margin="100,0,0,0" Width="200"/>

        <Button Content="Зберегти" Grid.Row="5" Margin="0,20,0,0" Width="100"
                HorizontalAlignment="Center" Click="BtnSave_Click"/>
    </Grid>
</Window>

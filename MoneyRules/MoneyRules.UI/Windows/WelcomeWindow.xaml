<Window x:Class="MoneyRules.UI.Windows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoneyRules - Welcome" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f8f9fa">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Ласкаво просимо до MoneyRules!"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="Керуйте своїми фінансами легко та зручно."
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button Content="Увійти"
                    Width="180"
                    Height="40"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Login_Click"
                    Margin="0,0,0,10"/>
            <Button Content="Зареєструватися"
                    Width="180"
                    Height="40"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>

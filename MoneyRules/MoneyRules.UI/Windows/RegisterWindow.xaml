<Window x:Class="MoneyRules.UI.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <!-- Кнопка Назад -->
            <Button Content="← Назад"
                    Width="80"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"/>

            <TextBlock Text="Ім'я:"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <CheckBox x:Name="LoginAfterRegisterCheckBox"
                      Content="Увійти в акаунт після реєстрації"
                      Margin="0,0,0,15"/>

            <Button Content="Зареєструватися"
                    Click="Register_Click"
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>


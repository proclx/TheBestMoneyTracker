<Window x:Class="MoneyRules.UI.Windows.TransactionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Історія транзакцій" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Фільтри" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <DatePicker x:Name="FromDatePicker" Width="150" Margin="0,0,10,0"/>
                <DatePicker x:Name="ToDatePicker" Width="150" Margin="0,0,10,0"/>
                <ComboBox x:Name="CategoryComboBox" Width="150" Margin="0,0,10,0"/>
                <ComboBox x:Name="TypeComboBox" Width="150" Margin="0,0,10,0"/>
                <Button Content="Застосувати" Width="120" Click="ApplyFilter_Click" Margin="0,0,10,0"/>
                <Button Content="Редагувати транзакцію" Width="180" Click="EditTransaction_Click"/>
            </StackPanel>

            <DataGrid x:Name="TransactionGrid" AutoGenerateColumns="False" Height="350" Margin="0,0,0,10"
                      SelectionMode="Single" SelectionUnit="FullRow" SelectionChanged="TransactionGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date}" />
                    <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}" />
                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}" />
                    <DataGridTextColumn Header="Сума" Binding="{Binding Amount}" />
                    <DataGridTextColumn Header="Опис" Binding="{Binding Description}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
